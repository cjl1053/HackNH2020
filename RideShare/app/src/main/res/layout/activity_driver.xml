<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="18sp"
        android:text="Driver"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TableLayout
        android:id="@+id/driver_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_v_driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:text="Your Name: " />

            <EditText
                android:id="@+id/edit_text_driver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_view_num_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Passenger Capacity:"
                android:textSize="14sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/num_passengers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_v_leave_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leaving Location:"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollHorizontally="true">
                <EditText
                    android:id="@+id/leave_loc_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:scrollHorizontally="true"
                    android:singleLine="true" />
            </HorizontalScrollView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_v_poll_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Polling Location"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <Spinner
                android:id="@+id/poll_loc_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_view_leave_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leaving Time:"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <Spinner
                android:id="@+id/time_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Submit"></Button>
</LinearLayout>