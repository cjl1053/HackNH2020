<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="18sp"
        android:text="Driver"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TableLayout
        android:id="@+id/driver_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_view_num_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Passenger Capacity:"
                android:textColor="#000000" />

            <NumberPicker
                android:id="@+id/pass_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></NumberPicker>

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_v_leave_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leaving Location:"
                android:textColor="#000000"
                android:layout_marginLeft="4dp" />

            <EditText
                android:id="@+id/leave_loc_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_v_poll_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Polling Location"
                android:textColor="#000000"
                android:layout_marginLeft="4dp"/>

            <Spinner
                android:id="@+id/poll_loc_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

    </TableLayout>
</LinearLayout>